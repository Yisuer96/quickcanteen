<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_dishes_introduction_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#ffffff">
    <!--<android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/successToolBar" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>-->
    <include layout="@layout/top_toolbar"
             android:id="@+id/top_toolbar"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/top_toolbar">
            <!--android:layout_below="@+id/toolbar"-->

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/dishesImg"
                    android:contentDescription="菜品图片"
                    app:srcCompat="@drawable/nopic"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="菜品名称"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="20sp"
                        android:textColor="@color/color_text_black"
                        android:id="@+id/dishesName"/>
                <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/dishesRating"
                        android:numStars="5"
                        android:rating="1"
                        android:isIndicator="false"
                        style="@style/Widget.AppCompat.RatingBar.Small"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@color/color_background_white"
                        android:id="@+id/imageView9" android:layout_weight="1"/>
                <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent" app:srcCompat="@color/color_divider_line"
                        android:id="@+id/imageView7"/>
                <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/collectButton"
                        android:textAlignment="textEnd"
                        android:background="@drawable/heart_test6"/>
                <TextView
                        android:text="收藏"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:id="@+id/collectText" android:textSize="18sp"/>

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="菜品价钱"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_dishes_introduction_price"
                        android:paddingTop="@dimen/text_top_margin"
                        android:textColor="@color/color_text_red"
                        android:id="@+id/dishesPrice" android:layout_weight="1"/>
                <LinearLayout android:gravity="right"
                              android:layout_toRightOf="@id/dishesPrice"
                              android:layout_alignParentRight="true"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:paddingTop="@dimen/text_top_margin">
                    <TextView android:clickable="true"
                              android:id="@+id/tvMinus"
                              android:gravity="center"
                              android:textStyle="bold"
                              android:background="@drawable/button_minus"
                              android:layout_width="30dp"
                              android:layout_height="30dp"/>
                    <TextView android:text="0"
                              android:id="@+id/tvCount"
                              android:minWidth="20dp"
                              android:layout_gravity="center_vertical"
                              android:textSize="@dimen/text_size_primary"
                              android:gravity="center"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                    <TextView android:clickable="true"
                              android:id="@+id/tvAdd"
                              android:textStyle="bold"
                              android:background="@drawable/button_add"
                              android:gravity="center"
                              android:layout_width="30dp"
                              android:layout_height="30dp"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:srcCompat="@color/color_divider_line"
                    android:id="@+id/dividerLine"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/dishesIntroTitle"
                    android:textSize="@dimen/text_size_dishes_introduction_info"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="菜品介绍"/>
            <TextView
                    android:text="这是菜品介绍"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/dishesIntroduce"
                    android:textColor="@color/color_text_black"
                    android:textSize="@dimen/text_size_dishes_introduction_info"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    app:srcCompat="@color/color_divider_line"
                    android:id="@+id/blank"/>
            <TextView
                    android:text="@string/assess_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/color_text_black"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/assessListTitle"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:srcCompat="@android:color/black"
                    android:id="@+id/line"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/text_top_margin"
                    android:layout_gravity="center"
                    android:text="@string/none_assess"
                    android:textSize="@dimen/text_size_primary"
                    android:textColor="@color/color_dishes_introduction_none_assess"
                    android:id="@+id/noneAssessAttention"
                    android:textAlignment="center"
            />
            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/userAssessList">
            </android.support.v7.widget.RecyclerView>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
