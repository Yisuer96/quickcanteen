<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
        <TextView
                android:text="用户名称"
                android:layout_width="wrap_content"
                android:textSize="45px"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" android:id="@+id/commenterName"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/showRatingBar" android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.5"
                android:isIndicator="false" style="@style/Widget.AppCompat.RatingBar.Small"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@color/color_background_white"
                android:id="@+id/imageView3" android:layout_weight="1"/>
        <TextView
                android:text="评论时间"
                android:layout_width="wrap_content"
                android:textSize="40px"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content" android:id="@+id/commentTime"/>
    </LinearLayout>

    <TextView
            android:text="评论内容"
            android:textSize="50px"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/commentContent"/>
</LinearLayout>